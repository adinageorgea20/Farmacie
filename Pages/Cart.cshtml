@page
@model Farmacie.Pages.Products.CartModel

<h1>Your Shopping Cart</h1>

@if (Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h3>Total: @Model.TotalPrice</h3>
    </div>

   
    <form method="post">
        <button type="submit" asp-page-handler="PlaceOrder" class="btn btn-primary mt-3">Place Order</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}
