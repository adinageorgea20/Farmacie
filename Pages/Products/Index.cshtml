@page
@model Farmacie.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Produsele noastre";
}

<h1>Produsele noastre</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<div class="row">
    @if (Model.Product != null && Model.Product.Any())
    {
        @foreach (var item in Model.Product)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <!-- Display product image if available, else show placeholder -->
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="~/images/@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    }
                    else
                    {
                        <img src="~/images/product-placeholder.jpg" class="card-img-top" alt="Product Image" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Price:</strong> @item.Price <br />
                            <strong>Stock:</strong> @item.Stock
                        </p>
                        <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No products available.</p>
    }
</div>
